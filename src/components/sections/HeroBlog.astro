---
interface Props {
    heading: string;
    description: string;
}
const { heading, description } = Astro.props;
---

<section
    class="bg-pink m-3.5 md:mx-4 md:my-8 lg:m-4 xl:m-8 py-7 md:py-12 pb-10 md:px-12 rounded-3xl h-[520px] md:h-fit flex flex-row items-start md:items-center"
>
    <div class="max-w-screen-lg w-full mx-auto">
        <div
            class="w-full md:w-[75%] lg:w-[65%] xl:w-[57%] flex flex-col gap-10 lg:gap-14 md:p-0"
        >
            <div class="flex flex-col gap-6 md:gap-10 px-6 md:px-0 lg:px-0">
                <h1
                    class="text-pink-400 font-black font-title text-4xl md:text-5xl lg:text-6xl"
                >
                    {heading}
                </h1>
                <p class="text-pink-100 text-xl md:text-2xl mb-3 md:mb-0">
                    {description}
                </p>
            </div>
        </div>
    </div>
</section>
