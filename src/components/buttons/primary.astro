---
interface Props {
    text: string;
}
const { text } = Astro.props;
---

<button
    class="w-fit px-5 py-3 rounded-lg text-pink-100 hover:text-pink-50 bg-pink-900/50 hover:bg-pink-900/75 active:bg-pink-900 border border-pink-400/50 hover:border-pink-400/50 active:border-pink-400/75 shadow-3d-button active:shadow-3d-button-active transition ease-[cubic-bezier(0.345, 0.115, 0.135, 1.42)] hover:-translate-y-0.5 active:translate-y-0"
    >{text}</button
>
