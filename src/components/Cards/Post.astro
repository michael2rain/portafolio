---
interface Props {
    postCat: string;
    postDate: string;
    postTitle: string;
    postDesc: string;
    postImage: string;
}
const { postTitle, postCat, postDate, postDesc, postImage } = Astro.props;
---

<article
    class="group relative grid grid-cols-[1fr_100px] gap-4 grid-flow-col bg-velvet-900/10 p-9 border rounded-2xl border-pink-900/25 transition ease-[cubic-bezier(0.345, 0.115, 0.135, 1.42)] shadow-3d hover:shadow-3d-hover active:shadow-3d-active hover:border-pink-900/50 hover:bg-velvet-900/25"
>
    <div
        class="col-span-1 max-h-min flex flex-row items-center gap-2 group-active:translate-y-0.5"
    >
        <svg
            class="fill-pink-200"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path d="M4 4H12V6H22V20H2V4H4ZM20 8H10V6H4V18H20V8Z"></path>
        </svg>
        <em class="text-pink-200 not-italic text">{postCat}</em>
        <span class="text-pink-200/75">-</span>
        <p class="text-pink-200/75 text-sm">Publicado {postDate}</p>
    </div>
    <h3 class="col-span-1 text-2xl font-medium group-active:translate-y-0.5">
        <a
            class="after:content-[''] after:absolute after:inset-0 text-2xl font-medium text-pink-100 group-hover:text-pink-50"
            href="#">{postTitle}</a
        >
    </h3>
    <p
        class="col-span-1 text-lg text-pink-200 group-hover:text-pink-100 group-active:translate-y-0.5"
    >
        {postDesc}
    </p>
    <img
        class="row-span-3 rounded-lg ring-2 ring-pink-900/25 group-hover:brightness-110 group-active:translate-y-0.5"
        width="100"
        height="100"
        src={postImage}
        alt=`Imagen destacada de "${postTitle}"`
    />
</article>
