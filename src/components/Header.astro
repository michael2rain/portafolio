---
interface Props {
  logoUrl: string;
  pageName: string;
}
const { logoUrl, pageName } = Astro.props;

import NavItem from "../components/nav/nav-item.astro";
---

<header class="bg-pink relative w-full">
  <div
    class="container grid grid-flow-row grid-cols-2 items-center justify-between py-4 mx-auto max-w-screen-xl px-6"
  >
    <picture class="flex flex-row justify-start items-center gap-3">
      <a title="Ir al inicio" href="/">
        <img
          class="inline transition-all hover:scale-110 hover:brightness-110 active:brightness-100"
          width="40"
          height="40"
          src={logoUrl}
        />
      </a>
      <span>/</span>
      <p class="w-full text-pink-100 font-medium">{pageName}</p>
    </picture>
    <nav class="flex justify-end">
      <ul class="flex flex-row gap-7">
        <NavItem text="InformaciÃ³n" link="/" linkTitle="Ir al inicio" />
        <NavItem
          text="Proyectos"
          link="/proyectos"
          linkTitle="Ir a proyectos"
        />
        <NavItem text="Blog" link="/blog" linkTitle="Ir al blog" />
      </ul>
    </nav>
  </div>
</header>
