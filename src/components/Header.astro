---
interface Props {
  logoUrl: string;
  pageName: string;
  links: string[];
}
const { logoUrl, pageName, links } = Astro.props;
---

<header class="bg-pink relative w-full">
  <section
    class="container flex flex-row items-center justify-between py-4 mx-auto max-w-screen-xl px-6"
  >
    <picture class="flex flex-row items-center gap-3">
      <a title="Ir al inicio" href="/">
        <img
          class="inline"
          width="40"
          height="40"
          src={logoUrl}
          alt="Michael Barrera Emblema"
        />
      </a>
      <span>/</span>
      <p class="text-base font-medium">{pageName}</p>
    </picture>
    <nav>
      <ul class="flex flex-row gap-7">
        {
          links.map((link) => (
            <li class="font-medium text-pink-100 hover:text-pink-50">
              <a title=`Ir a ${link}` href="#">{link}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </section>
</header>
